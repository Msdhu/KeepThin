.wraper {
    align-items: center;
    background-image: linear-gradient(90deg,#ec772f,#efa63b 100%,#efa63b 0);
    display: flex;
    flex-direction: column;
    width: 100%;
}

.header {
    height: 372rpx;
    position: relative;
    width: 100%;
}

.smallLogo {
    bottom: 118rpx;
    height: 120rpx;
    left: 160rpx;
    position: absolute;
    width: 120rpx;
}

.backImg {
    height: 372rpx;
    right: 0;
    width: 374rpx;
}

.backImg,.title {
    position: absolute;
}

.title {
    left: 64rpx;
    top: 234rpx;
    z-index: 9;
}

.title>view:nth-child(1) {
    color: #fff;
    font-size: 60rpx;
    font-weight: 700;
    letter-spacing: 3rpx;
    line-height: 84rpx;
}

.title>view:nth-child(2) {
    background: #fff;
    border-radius: 24rpx;
    box-sizing: border-box;
    color: #ec732f;
    display: block;
    font-size: 38rpx;
    font-size: 28rpx;
    height: 48rpx;
    letter-spacing: 3rpx;
    line-height: 48rpx;
    margin-top: 15rpx;
    overflow: hidden;
    padding: 0rpx 20rpx;
    text-align: center;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.date {
    color: #fff;
    font-size: 28rpx;
    left: 64rpx;
    position: absolute;
    top: 394rpx;
}

.wrap {
    border-radius: 6rpx;
    margin: 76rpx 0 40rpx;
    min-height: 100vh;
    width: 92%;
    z-index: 99;
}

.tabs,.wrap {
    background: #fff;
}

.tabs {
    align-items: center;
    display: flex;
    font-size: 30rpx;
    margin-bottom: 10rpx;
    text-align: center;
    width: 100%;
}

.tab {
    color: #666;
    height: 88rpx;
    line-height: 88rpx;
    width: 50%;
}

.active {
    color: #ed8734;
    position: relative;
}

.active::after {
    background: #ed8734;
    border-radius: 20rpx;
    bottom: 0;
    content: " ";
    height: 8rpx;
    left: 50%;
    position: absolute;
    transform: translateX(-60rpx);
    width: 120rpx;
}

.scroll {
    flex: 1;
    overflow: hidden;
}

.dataList {
    border-bottom: 1rpx dashed #f2f2f2;
    box-sizing: border-box;
    height: 140rpx;
    justify-content: space-between;
    line-height: 140rpx;
    padding: 0 40rpx;
    width: 100%;
}

.dataList,.info {
    align-items: center;
    display: flex;
}

.name {
    color: #333;
    font-size: 30rpx;
    font-weight: 700;
    letter-spacing: 3rpx;
    margin-left: 30rpx;
}

.headImg {
    height: 80rpx;
    width: 80rpx;
}

.headBackImg {
    color: #333;
    font-size: 36rpx;
    font-weight: 700;
    height: 72rpx;
    line-height: 72rpx;
    margin-right: 30rpx;
    text-align: center;
    width: 50rpx;
}

.jianInfo {
    align-items: center;
    color: #333;
    display: flex;
    font-size: 30rpx;
}

.frequency {
    width: 100rpx;
}

.jinNumber {
    text-align: right;
    width: 180rpx;
}

.jianInfo text,.tip {
    font-size: 28rpx;
}

.tip {
    color: #fff;
    height: 100rpx;
    z-index: 9;
}