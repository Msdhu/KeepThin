.wraper {
    height: 100%;
    width: 100%;
}

.header {
    box-sizing: border-box;
    padding: 0 30rpx;
    position: relative;
}

.header,.headerBack {
    height: 833rpx;
    width: 100%;
}

.headerBack {
    left: 0;
    position: absolute;
    top: 0;
    z-index: -1;
}

.header_info {
    color: #fff;
    height: 96rpx;
    justify-content: space-between;
}

.header_info,.userInfoCon {
    align-items: center;
    display: flex;
}

.headerImg {
    height: 96rpx;
    margin-left: 10rpx;
    width: 96rpx;
}

.userInfo {
    color: #fff;
    font-size: 30rpx;
    margin-left: 18rpx;
    text-align: left;
}

.userInfo>view {
    line-height: 42rpx;
}

.userInfo>view:nth-child(1) {
    margin-bottom: 4rpx;
}

.userInfo>view:nth-child(2) {
    align-items: center;
    display: flex;
}

.userInfo>view:nth-child(2)>image {
    height: 18rpx;
    margin-left: 10rpx;
    width: 30rpx;
}

.periodTag {
    background: #fff3e4;
    border-radius: 34rpx;
    color: #feb857;
    font-size: 30rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    width: 165rpx;
}

.smallLogo {
    height: 100rpx;
    width: 100rpx;
}

.dailyWeight {
    height: 390rpx;
    margin-top: 35rpx;
    position: relative;
    width: 100%;
}

.dailyWeight>image:nth-child(1) {
    height: 390rpx;
    left: 50%;
    margin-left: -224rpx;
    position: absolute;
    width: 448rpx;
}

.dailyWeightCon {
    align-items: center;
    display: flex;
    flex-direction: column;
    position: relative;
    z-index: 2;
}

.dailyWeightCon>view:nth-child(1) {
    color: #fff;
    font-size: 30rpx;
    margin-top: 62rpx;
}

.dailyWeight_content {
    align-items: center;
    display: flex;
    justify-content: center;
}

.dailyWeight_content>image {
    height: 38rpx;
    margin: 16rpx 0 0 16rpx;
    width: 38rpx;
}

.dailyWeight_content>view:nth-child(1) {
    align-items: center;
    display: flex;
    height: 168rpx;
    line-height: 168rpx;
}

.dailyWeight_content>view:nth-child(1)>text:nth-child(1) {
    color: #fff;
    display: inline-block;
    font-size: 120rpx;
    font-weight: 700;
}

.dailyWeight_content>view:nth-child(1)>text:nth-child(2) {
    color: #fff;
    display: inline-block;
    font-size: 80rpx;
    margin-top: 24rpx;
}

.dailyWeightCon>view:nth-child(3) {
    color: #fff;
    font-size: 32rpx;
}

.dailyWeight_all {
    background: #fff3e4;
    border-radius: 34rpx;
    height: 57rpx;
    line-height: 57rpx;
    margin-top: 24rpx;
    text-align: center;
    width: 235rpx;
}

.dailyWeight_all>text {
    color: #feb857;
    font-size: 32rpx;
}

.dailyData {
    background: #fffdf9;
    border-radius: 6rpx;
    box-shadow: 1rpx 1rpx 18rpx 0 hsla(0,0%,94%,.75);
    box-sizing: border-box;
    margin: -138rpx auto 0;
    padding: 40rpx 14rpx;
    width: 92%;
}

.bigDailyData {
    border-bottom: 1rpx solid #e9e9e9;
    flex-wrap: wrap;
    justify-content: space-between;
}

.bigDailyData,.bigDailyData>view {
    align-items: center;
    display: flex;
}

.bigDailyData>view {
    flex-direction: column;
    width: 33%;
}

.bigDailyData>view:nth-child(-n+6) {
    margin-bottom: 20rpx;
}

.bigDailyData_value {
    color: #fdb03f;
    font-size: 34rpx;
    font-weight: 700;
    height: 52rpx;
    line-height: 52rpx;
}

.bigDailyData_value>text {
    color: #333;
    font-size: 32rpx;
    font-weight: 400;
}

.bigDailyData_tit {
    color: #333;
    font-size: 30rpx;
    height: 42rpx;
    line-height: 42rpx;
}

.smallDailyData {
    display: flex;
    justify-content: space-around;
    margin-top: 20rpx;
    width: 100%;
}

.smallDailyData>view {
    align-items: center;
    display: flex;
}

.smallDailyData_value {
    color: #fdb03f;
    font-size: 28rpx;
    font-weight: 700;
    margin-left: 2rpx;
}

.smallDailyData_value>text {
    color: #333;
    font-size: 28rpx;
    font-weight: 400;
}

.smallDailyData_tit {
    color: #333;
    font-size: 28rpx;
}

.collapse {
    margin: 30rpx auto;
    width: 92%;
}

.canvasCon {
    background: #fffdf9;
    border-radius: 6rpx;
    box-shadow: 1rpx 1rpx 18rpx 0 hsla(0,0%,94%,.75);
    box-sizing: border-box;
    margin: 10rpx auto;
    padding: 24rpx 0;
    width: 100%;
}

.canvasCon>view {
    color: #fcbf56;
    font-size: 28rpx;
    height: 40rpx;
    line-height: 40rpx;
    margin-right: 20rpx;
    text-align: right;
}
ec-canvas,
.canvas {
    width: 100%;
    height: 550rpx;
}

.dailyList {
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: 100rpx;
    padding: 0 20rpx;
    width: 100%;
}

.dailyList>view {
    height: 180rpx;
    line-height: 180rpx;
    position: relative;
    text-align: center;
    width: 50%;
}

.dailyList>view>image {
    height: 100%;
    left: 0;
    position: absolute;
    width: 100%;
    z-index: -1;
}

.dailyList>view>view {
    font-size: 36rpx;
    font-weight: 700;
}

.currentWeightForm {
    box-sizing: border-box;
    padding: 80rpx 28rpx;
}

.saveBtn {
    display: flex;
    justify-content: center;
    margin-top: 40rpx;
}