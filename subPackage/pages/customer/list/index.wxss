.wraper {
    display: flex;
    flex-direction: column;
    height: 100vh;
    overflow: hidden;
    width: 100%;
}

.topView {
    margin: 32rpx 30rpx;
    width: 100%;
}

.inputCon,.topView {
    align-items: center;
    display: flex;
}

.inputCon {
    background: #f0f0f2;
    border-radius: 34rpx;
    box-shadow: 0 1rpx 2rpx 0 hsla(0,0%,80%,.6);
    width: 538rpx;
}

.inputCon>image {
    height: 36rpx;
    margin-left: 14rpx;
    width: 36rpx;
}

.search {
    box-sizing: border-box;
    color: #333;
    font-size: 32rpx;
    height: 68rpx;
    padding-left: 42rpx;
    width: 400rpx;
}

.input-placeholder {
    color: #a9a9a9;
    font-size: 32rpx;
}

.selectBtn {
    bottom: 220rpx;
    height: 100rpx;
    position: fixed;
    right: 28rpx;
    width: 100rpx;
    z-index: 99;
}

.date {
    align-items: center;
    box-sizing: border-box;
    display: flex;
    font-size: 24rpx;
    height: 68rpx;
    padding-left: 20rpx;
    position: relative;
    width: 400rpx;
    color: #a9a9a9;
}

.clearDate {
    background: #b5aaaa;
    border-radius: 50%;
    color: #fff;
    font-size: 20rpx;
    height: 30rpx;
    line-height: 30rpx;
    position: absolute;
    right: 20rpx;
    text-align: center;
    top: -5rpx;
    width: 30rpx;
}

.totalNum {
    align-items: center;
    display: flex;
    margin: 0 0 26rpx 30rpx;
}

.totalNum>image {
    height: 34rpx;
    margin-right: 12rpx;
    margin-top: 4rpx;
    width: 8rpx;
}

.totalNum>view {
    color: #333;
    font-size: 30rpx;
    text-align: center;
}

.scroll {
    flex: 1;
    overflow: hidden;
}

.wrap {
    flex-direction: column;
    width: 100%;
}

.listData,.wrap {
    align-items: center;
    display: flex;
}

.listData {
    background: #fff;
    border-radius: 8rpx;
    box-shadow: 1rpx 8rpx 18rpx 6rpx hsla(0,0%,80%,.3);
    font-size: 30rpx;
    margin-bottom: 32rpx;
    padding: 20rpx;
    position: relative;
    text-align: center;
    width: 92%;
}

.listData,.transfer {
    box-sizing: border-box;
}

.transfer {
    background: #fdaf41;
    border-radius: 0 8rpx 8rpx 0;
    color: #fff;
    font-size: 28rpx;
    left: 0;
    padding: 5rpx;
    position: absolute;
    top: 0;
    width: 40rpx;
}

.customerInfo {
    align-items: center;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
    position: relative;
    width: 40%;
}

.customerInfo>image {
    height: 130rpx;
    width: 130rpx;
}

.customerInfo>text:nth-of-type(1) {
    color: #fdaf41;
    font-weight: 700;
    margin-top: 14rpx;
}

.customerInfo>text:nth-of-type(2) {
    color: #333;
    font-weight: 700;
}

.info {
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
    text-align: left;
    width: 60%;
}

.info>view {
    height: 42rpx;
    line-height: 42rpx;
    margin-bottom: 15rpx;
    width: 100%;
}

.label {
    display: inline-block;
    font-weight: 700;
}

.value {
    color: #666;
    margin-left: 6rpx;
}

.customerPhone {
    align-items: center;
    display: flex;
    margin-top: 10rpx;
}

.downLoad {
    bottom: 40rpx;
    position: fixed;
    text-align: center;
    width: 100%;
}

.popupContent {
    height: 100%;
    position: relative;
    width: 100%;
}

.popupCon {
    box-sizing: border-box;
    padding: 30rpx 40rpx;
}

.title {
    color: #333;
    font-size: 30rpx;
    font-weight: 700;
    margin-bottom: 20rpx;
}

.screenInfo {
    align-items: center;
    display: flex;
    margin-bottom: 30rpx;
    width: 100%;
}

.screenInfoCon {
    background: #f2f2f2;
    box-sizing: border-box;
    color: #4a4a4a;
    padding: 10rpx 24rpx;
}

.screenInfoCon,.screenInfoItem {
    border-radius: 8rpx;
    font-size: 30rpx;
}

.screenInfoItem {
    height: 60rpx;
    line-height: 60rpx;
    margin-right: 30rpx;
    text-align: center;
    width: 33%;
}

.noActive {
    background: #f2f2f2;
}

.active {
    background: #ffb629;
    color: #fff;
}

.screenOptions {
    align-items: center;
    bottom: 0;
    display: flex;
    position: absolute;
    text-align: center;
    width: 100%;
}

.determine {
    color: #fff;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    width: 50%;
}

.toStoreTime {
    align-items: center;
    background: #f2f2f2;
    border-radius: 8rpx;
    box-sizing: border-box;
    color: #4a4a4a;
    display: flex;
    font-size: 30rpx;
    justify-content: center;
    margin-bottom: 30rpx;
    padding: 5rpx 24rpx;
    width: 340rpx;
}

.toStoreTime input {
    text-align: center;
    width: 60rpx;
}

.toStoreTime>text {
    margin: 8rpx 0 0 8rpx;
}

.expired {
    background-color: #fdad46;
    border-radius: 22rpx;
    color: #fff;
    font-size: 26rpx;
    height: 36rpx;
    left: 50%;
    line-height: 36rpx;
    position: absolute;
    text-align: center;
    top: 4rpx;
    transform: translateX(-62.5rpx);
    width: 125rpx;
}