.wrap {
  height: 100%;
  width: 100%;
}

.tabs {
  align-items: center;
  background: #fff;
  display: flex;
  height: 88rpx;
  line-height: 88rpx;
  width: 100%;
}

.tab {
  font-size: 30rpx;
  text-align: center;
  width: 50%;
}

.active {
  color: #ffb629;
  position: relative;
}

.active::after {
  background: #ffb629;
  border-radius: 20rpx;
  bottom: 0;
  content: " ";
  height: 8rpx;
  left: 50%;
  position: absolute;
  transform: translateX(-50rpx);
  width: 100rpx;
}

.wraper {
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 1rpx 1rpx 18rpx 0 hsla(0,0%,95%,.75);
  box-sizing: border-box;
  margin: 22rpx 30rpx;
  padding: 20rpx 28rpx;
}

.options {
  align-items: center;
  display: flex;
}

.options>image {
  height: 34rpx;
  margin-right: 8rpx;
  margin-top: 4rpx;
  width: 8rpx;
}

.optionsBtn {
  align-items: center;
  display: flex;
}

.optionsBtn>view {
  color: #666;
  font-size: 34rpx;
  margin: 0 12rpx;
}

.optionsBtn>image {
  height: 30rpx;
  margin-top: 6rpx;
  width: 30rpx;
}

.serviceModule,.staffModule {
  width: 100%;
}

.content {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 42rpx;
}

.empty-container {
  flex: 1;
}

.serviceItem {
  background: #f2f2f2;
  border-radius: 30rpx;
  color: #4a4a4a;
  font-size: 26rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 20rpx 30rpx 0;
  position: relative;
  text-align: center;
  width: 30%;
}

.close {
  height: 30rpx;
  line-height: 30rpx;
  position: absolute;
  right: -6rpx;
  top: -10rpx;
  width: 30rpx;
}

.addForm {
  box-sizing: border-box;
  padding: 28rpx;
}

.saveBtn {
  margin-top: 20rpx;
}

.newBtn,.saveBtn {
  display: flex;
  justify-content: center;
}

.newBtn {
  align-items: center;
  background: #ffb629;
  border-radius: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 36rpx 30rpx 0;
  width: 180rpx;
}

.newBtn>image {
  height: 26rpx;
  margin-right: 8rpx;
  width: 26rpx;
}

.newBtn>text {
  color: #fff;
  font-size: 28rpx;
}

.topping {
  height: 24rpx;
  left: 20rpx;
  position: absolute;
  top: 18rpx;
  width: 24rpx;
}

.other {
  flex-wrap: wrap;
  width: 100%;
}

.moduleCard,.other {
  display: flex;
}

.moduleCard {
  align-items: center;
  color: #515365;
  font-size: 38rpx;
  font-weight: 700;
  height: 160rpx;
  justify-content: center;
  position: relative;
  width: 50%;
}

.moduleCard>view {
  position: absolute;
  z-index: 9;
}

.moduleCard_back {
  height: 100%;
  position: absolute;
  width: 100%;
}