.wrap {
    box-sizing: border-box;
    height: 100%;
    padding: 28rpx;
    width: 100%;
}

.title {
    font-size: 32rpx;
    font-weight: 700;
}

.defaultCity {
    align-items: center;
    background: #fff;
    border-radius: 8rpx;
    box-shadow: 1rpx 1rpx 18rpx 0 hsla(0,0%,95%,.75);
    box-sizing: border-box;
    color: #333;
    display: flex;
    font-size: 32rpx;
    height: 85rpx;
    padding-left: 32rpx;
    width: 100%;
}

.defaultCity>view:nth-child(2) {
    margin: 0 6rpx;
}

.defaultCity>view:nth-child(3) {
    margin-right: 10rpx;
}

.cityList {
    background: #fff;
    border-radius: 8rpx;
    box-shadow: 1rpx 1rpx 18rpx 0 hsla(0,0%,95%,.75);
    box-sizing: border-box;
    margin-top: 22rpx;
    padding: 32rpx;
}

.cityListItem {
    background: #f1f1f1;
    border-radius: 8rpx;
    box-sizing: border-box;
    color: #333;
    font-size: 32rpx;
    height: 80rpx;
    justify-content: space-between;
    margin-top: 30rpx;
    padding: 0 20rpx;
    width: 100%;
}

.cityListItem,.cityListItem>view:nth-child(1) {
    align-items: center;
    display: flex;
}

.storeNum {
    margin-left: 10rpx;
}

.expiredFlag {
    margin-right: 10rpx;
}